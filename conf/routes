# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index

GET     /posts                      controllers.Default.redirect(to="/posts/")
GET     /posts/                     controllers.PostsController.index
GET     /posts/new                  controllers.PostsController.renderCreate
GET     /posts/:id                  controllers.PostsController.show(id: PostId)
POST    /posts/:id/create           controllers.PostsController.submitCreate(id: PostId)
GET     /posts/:id/edit             controllers.PostsController.renderEdit(id: PostId)
POST    /posts/:id/edit             controllers.PostsController.submitEdit(id: PostId)
POST    /posts/:id/delete           controllers.PostsController.delete(id: PostId)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
