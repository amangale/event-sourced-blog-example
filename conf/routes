# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index

# Blog posts
GET     /posts                      controllers.Default.redirect(to="/posts/")
GET     /posts/                     controllers.PostsController.index
GET     /posts/new                  controllers.PostsController.add.show
POST    /posts/:id/add              controllers.PostsController.add.submit(id: PostId)
GET     /posts/:id/edit             controllers.PostsController.edit.show(id: PostId)
POST    /posts/:id/edit             controllers.PostsController.edit.submit(id: PostId, r: StreamRevision)
POST    /posts/:id/delete           controllers.PostsController.delete(id: PostId, r: StreamRevision)
GET     /posts/:id                  controllers.PostsController.show(id: PostId)

POST    /posts/:postId/comments/                   controllers.PostsController.comments.add(postId: PostId, r: StreamRevision)
POST    /posts/:postId/comments/:commentId/delete  controllers.PostsController.comments.delete(postId: PostId, r: StreamRevision, commentId: CommentId)

# Users
GET     /users/log-in               controllers.UsersController.authentication.show
POST    /users/log-in               controllers.UsersController.authentication.submit
GET     /users/logged-out           controllers.UsersController.authentication.loggedOut
GET     /users/register             controllers.UsersController.register.show
POST    /users/register             controllers.UsersController.register.submit
GET     /users/registered           controllers.UsersController.register.registered
GET     /users/logged-in            controllers.UsersController.authentication.loggedIn
GET     /users/log-out              controllers.UsersController.authentication.logOut
GET     /profile                    controllers.UsersController.profile.show
POST    /profile                    controllers.UsersController.profile.changeProfile
POST    /profile/email              controllers.UsersController.profile.changeEmailAddress
POST    /profile/password           controllers.UsersController.profile.changePassword

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
